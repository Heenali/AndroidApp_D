<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#434252</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#434252</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--
             colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets


        -->
        <item name="colorAccent">#D35316</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:navigationBarColor">#434252</item>
        <item name="android:editTextStyle">@style/GooglePlusButtonStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="GooglePlusButtonStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
    </style>
    <!--declair toggle theam -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green_bg</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/SandyBrown</item>
       <!-- <item name="android:track">@android:drawable/dialog_holo_light_frame</item>-->
    </style>
    <!--close -->

</resources>